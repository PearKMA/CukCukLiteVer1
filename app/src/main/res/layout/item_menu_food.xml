<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/margin_big"
    android:paddingTop="@dimen/margin_normal"
    android:paddingEnd="@dimen/margin_big"
    android:paddingBottom="@dimen/margin_normal">

    <ImageView
        android:id="@+id/ivIconFood"
        android:layout_width="@dimen/size_icon_food"
        android:layout_height="@dimen/size_icon_food"
        android:background="@color/main_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="@dimen/margin_big"
            android:paddingEnd="@dimen/margin_big"
            android:text="Bò húc"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPriceFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_big"
                android:maxLines="1"
                android:text="@string/price_food"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tvStatusFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:background="@drawable/round_corner_red"
                android:gravity="center"
                android:paddingStart="@dimen/margin_normal"
                android:paddingEnd="@dimen/margin_normal"
                android:text="@string/status_food"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/size_icon_food"
        android:layout_height="@dimen/size_icon_food"
        android:layout_marginEnd="@dimen/margin_big"/>
</LinearLayout>
